@using OzturkOtoMarketWEBUI.Entity;
@model  IEnumerable<Product>



<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var urun in Model)
    {
        <div class="col">
            <div class="card" style="background-color: ghostwhite; overflow: hidden;">
                <img src="~/Upload/@urun.Image" class="card-img-top" alt="@urun.Name" style="width: 100%; max-height: 200px; object-fit: cover;">
                <div class="card-body text-center">
                    <h5 class="card-title" style="font-size: 16px; font-weight: 400; color: #484848;">
                        <a href="/Home/Details/@urun.Id" style="text-decoration: none;"><strong>@urun.Name</strong></a>
                    </h5>
                    <p class="card-text" style="font-size: 12px;">@urun.Description</p>
                </div>
                <div class="card-footer">
                    <small class="text-body-secondary" style="color: #414141; font-weight: 700; font-size: 14px;">
                        <i class="fa fa-try" aria-hidden="true"></i> @urun.Price
                    </small>
                    <a href="/Home/Details/@urun.Id" class="btn btn-secondary btn-sm float-end">
                        <i class="fa fa-angle-double-right" aria-hidden="true"></i> Ürünü İncele
                    </a>
                </div>
            </div>
        </div>
    }
</div>




